<Window x:Class="AritmetikApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AritmetikApp"
        mc:Ignorable="d"
        Title="Aritmetiken" 
        Height="450" Width="800"
        SizeToContent="WidthAndHeight"
        Background="LightGray">
    <StackPanel>
        <Label FontWeight="Bold">Tal 1: </Label>
        <TextBox Name="txbtal1" Width="200" Margin="5" Padding="5"></TextBox>
        <Label FontWeight="Bold">Operator (+, -, *, /): </Label>
        <TextBox Name="txbOperator" Width="200" Margin="5" Padding="5"></TextBox>
        <Label FontWeight="Bold">Tal 2: </Label>
        <TextBox Name="txbtal2" Width="200" Margin="5" Padding="5"></TextBox>
        <Button Click="KlickBeräkna" Width="200" Padding="5" Margin="10">Beräkna</Button>
        <Label Name="lblResultat" FontWeight="Bold"></Label>
    </StackPanel>
</Window>
