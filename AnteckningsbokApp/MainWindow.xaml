<Window x:Class="AnteckningsbokApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AnteckningsbokApp"
    mc:Ignorable="d"
    Title="Anteckningsbok"
    Height="450" Width="800"
    SizeToContent="WidthAndHeight"
    MinHeight="350" MinWidth="500"
    MaxHeight="600" MaxWidth="1000"
    Background="LightGray">
    <StackPanel Margin="5">
    <Label FontSize="30" FontWeight="Bold">Anteckningsbok</Label>
        <StackPanel Orientation="Horizontal">
            <Label Margin="10">Ange en text: </Label>
            <TextBox Name="txbInput" Width="300" Margin="10"></TextBox>
        </StackPanel>
        <Button Click="KlickSkicka" Margin="5" Width="200" Height="30">Spara</Button>
        <TextBox Name="txbHistorik" Margin="5" IsReadOnly="True" Height="300"></TextBox>
    </StackPanel>
</Window>