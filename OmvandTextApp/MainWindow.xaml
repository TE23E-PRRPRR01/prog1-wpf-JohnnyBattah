<Window x:Class="OmvandTextApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OmvandTextApp"
        mc:Ignorable="d"
        Title="Omvänd Text" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label FontSize="24">Omvänd Text</Label>
        <Label>Ange text</Label>
        <TextBox Name="txbInput" Margin="5" Height="50" Width="150" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
        <Button Click="KlickVänd" Height="20" Width="150">Kör</Button>
        <Label Margin="5">Sparad text</Label>
        <TextBox IsReadOnly="True" Margin="5" Width="150" Height="100" TextWrapping="Wrap"></TextBox>
        <TextBox Margin="5" IsReadOnly="True" Width="150" FontStyle="Italic"></TextBox>
    </StackPanel>
</Window>
