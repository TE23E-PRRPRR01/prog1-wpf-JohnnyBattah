<Window x:Class="ValApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValApp"
        mc:Ignorable="d"
        Title="Omröstning" Height="500" Width="300">
    <StackPanel Margin="20">
        <Image Source="bilder/mello.png" Width="200" Margin="0,0,0,10"></Image>
        <Label>Vilken är din favoritlåt?</Label>

        <Button Name="röd" Click="KlickRösta">Röd</Button>
        <Button Name="blå" Click="KlickRösta">Blå</Button>
        <Button Name="grön" Click="KlickRösta">Grön</Button>
        <Button Name="gul" Click="KlickRösta">Gul</Button>
        <Button Name="lila" Click="KlickRösta">Lila</Button>
    
        <Label>Antal röster:</Label>
        <TextBox Name="txbResultat" IsReadOnly="True"></TextBox>

        <Button Click="KlickÅterställ">Återställ rösterna</Button>
    </StackPanel>
</Window>
