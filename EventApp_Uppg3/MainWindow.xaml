<Window x:Class="EventApp_Uppg3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventApp_Uppg3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label Margin="10">Resize zé windoz</Label>
        <Button Margin="10" Click="KlickaÖkaBredd">Öka bredden med 10px</Button>
        <Button Margin="10" Click="KlickaMinskaBredd">Minska bredden med 10px</Button>
        <Button Margin="10" Click="KlickaÖkaHöjd">Öka höjden med 10px</Button>
        <Button Margin="10" Click="KlickaMinskaHöjd">Minska höjden med 10px</Button>
    </StackPanel>
</Window>
