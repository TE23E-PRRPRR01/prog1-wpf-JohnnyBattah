<Window x:Class="SwishApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwishApp"
        mc:Ignorable="d"
        Title="SwishApp" 
        Height="450" Width="800"
        SizeToContent="WidthAndHeight"
        Background="LightGray">
    <StackPanel Margin="5">
        <Label FontSize="26" FontWeight="Bold">SWISH</Label>
        <Label FontWeight="Bold">Kontobalans: </Label>
        <TextBox Name="txbSaldo" IsReadOnly="True" Padding="5" Margin="5" Width="200"></TextBox>
        <Label FontWeight="Bold">Önskat belopp: </Label>
        <TextBox Name="txbBelopp" Padding="5" Margin="5" Width="200"></TextBox>
        <Button Click="KlickSwisha" Padding="5" Margin="5" Width="200">Swisha</Button>
        <Label Name="lblResultat" FontWeight="Bold"></Label>
    </StackPanel>
</Window>
