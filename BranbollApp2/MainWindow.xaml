<Window x:Class="BranbollApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BranbollApp2"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" Width="800"
        SizeToContent="WidthAndHeight" Background="#EEE">
    <StackPanel>
        <Label FontSize="26" FontWeight="Bold" Margin="5">Brännbollsräknaren</Label>

        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Margin="5">Lag 1: </Label>
            <TextBox Name="txbInne" IsReadOnly="True" Width="50" Height="25" Margin="5"></TextBox>
            <Label Margin="5">Lag 2: </Label>
            <TextBox Name="txbUte" IsReadOnly="True" Width="50" Height="25" Margin="5"></TextBox>
        </StackPanel>

        <DockPanel Margin="5">
            <Button Click="KlickaFrivarv" Width="80" Height="30" Margin="5">Frivarv</Button>
            <Button Click="KlickaBränning" Width="80" Height="30" Margin="5">Bränning</Button>
            <Button Click="KlickaLyra" Width="80" Height="30" Margin="5">Lyra</Button>
            <Button Click="KlickaVarv" Width="80" Height="30" Margin="5">Varv</Button>
        </DockPanel>

        <Label>Historik</Label>
        <TextBox Name="txbHistorik" IsReadOnly="True" Margin="5" Height="150"></TextBox>

        <Button Click="KlickaSpara">Spara</Button>
    </StackPanel>

</Window>
