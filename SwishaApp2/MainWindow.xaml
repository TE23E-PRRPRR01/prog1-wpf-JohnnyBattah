<Window x:Class="SwishaApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwishaApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label FontWeight="Bold" FontSize="24">SWISH</Label>
        <Label FontWeight="Bold">Kontobalans:</Label>
        <TextBox Name="txbSaldo" IsReadOnly="True"></TextBox>
        <Label FontWeight="Bold">Önskat belopp:</Label>
        <TextBox Name="txbBelopp"></TextBox>
        <Button Click="KlickSwisha" Margin="10" Padding="5">Swisha</Button>
        <Label FontWeight="Bold" Name="lblResultat"></Label>
    </StackPanel>
</Window>
