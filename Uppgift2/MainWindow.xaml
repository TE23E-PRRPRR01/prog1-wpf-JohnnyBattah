<Window x:Class="Uppgift2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift2"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="5">
        <Label FontSize="24" FontWeight="Bold">Enkel miniräknare</Label>

        <StackPanel Margin="5">
            <Label>Tal 1</Label>
            <TextBox Name="txbTal1"></TextBox>
        </StackPanel>

        <StackPanel Margin="5">
            <Label>Tal 2</Label>
            <TextBox Name="txbTal2"></TextBox>
        </StackPanel>

        <DockPanel Margin="5" HorizontalAlignment="Stretch">
            <Button Click="KlickaPlus" Width="50" Height="30" Margin="5">+</Button>
            <Button Click="KlickaMinus" Width="50" Height="30" Margin="5">-</Button>
            <Button Click="KlickaGånger" Width="50" Height="30" Margin="5">*</Button>
            <Button Click="KlickaDela" Width="50" Height="30" Margin="5">/</Button>
        </DockPanel>

        <Label Margin="5">Resultat</Label>
        <TextBox Name="txbResultat" IsReadOnly="True"></TextBox>
    </StackPanel>
</Window>
